<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputname">名前</label>
          <%= f.text_field :name, autofocus: true, id:"name", placeholder:"名前", class:"form-cotrol" %>
        </div>
        <div class="form-group">
          <label for="inputimage">プロフィール画像</label>
          <%= f.file_field :image, id:"user_profile_image", accept: "image/*", class:"form-control-file" %>
        </div>
        <div class="form-group">
          <label for="inputintroduction">自己紹介文</label>
          <%= f.text_area :introduction,　autofocus: true, id:"introduction", placeholder: "自己紹介文", class:"form-cotrol" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
