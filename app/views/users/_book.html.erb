<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User Info</h2>
      <%= image_tag user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>名前</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>自己紹介文</th>
            <th><%= user.introductin %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to user_path(user), class:"btn btn-outline-secondary btn-block" %><i class="fa-solid fa-user-gear"></i>
      </div>
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book do |f| %>
        
        <div class="form-group">
          <%= f.file_field :title, class:"form-control title", placeholder:"本のタイトル" %>
        </div>
        
        <div class="form-group">
          <h4>感想</h4>
          <%= f.text_area :opinion, class:"form-control body", placeholder:"感想" %>
        </div>
        
      <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4", class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>