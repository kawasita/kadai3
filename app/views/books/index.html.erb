<%= render 'book', book: @book %>
<%= render 'book', user: @user %>
    
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover yable-inverse">
    <thead>
      <tr>
        <th></th>
        <th>本のタイトル</th>
        <th>感想</th>
      </tr>
    </thead>
    <tbody>
      <% @book.each do |book| %>
　　　  <tr>
　　      <td><%= link_to (image_tag post_image.user.get_profile_image(80,80)), books_path %></td>
　　      <td><%= book.title %></td>
　　      <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
 </div>
