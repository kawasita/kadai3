<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User Info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>名前</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>自己紹介文</th>
            <th><%= @user.introductin %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to user_path(@user) %><i class="fa-solid fa-user-gear"></i>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
          <%= f.file_field :本のタイトル %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            <%= f.text_area :感想 %>
            <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4", class:"btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
