<%= render 'users/user', user: @user %>
<%= render 'books/book', book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover yable-inverse">
        <thead>
          <tr>
            <th></th>
            <th>本のタイトル</th>
            <th>感想</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to book.user do %>
              <%= image_tag @user.get_profile_image(80,80) %>
              <% end %>
              </td>
              <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
