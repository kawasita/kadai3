<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <label for="inputtitle">本のタイトル</label>
        <%= f.text_field :title, autofocus: true, id:"title", placeholder:"本のタイトル", class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="inputbody">感想</label>
        <%= f.text_field :body, autofocus: true, id:"body", placeholder: "感想", class:"form-control" %>
      </div>
      <div class="form-group"></div>
        <%= f.submit "Update Book", class:"btn btn-success" %>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>