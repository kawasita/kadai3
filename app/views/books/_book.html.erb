  <h2 class="mt-3">New book</h2>
    <%= form_with model: book do |f| %>
        
      <div class="form-group">
        <label for="inputtitle">本のタイトル</label>
        <%= f.text_field :title, class:"form-control", placeholder:"本のタイトル" %>
      </div>
        
      <div class="form-group">
        <label for="inputbody">感想</label>
        <%= f.text_area :body, class:"form-control", placeholder:"感想" %>
      </div>
    <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4", class:"btn btn-success" %>
    <% end %>
  </div>